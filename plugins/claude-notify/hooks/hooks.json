{
  "description": "Claude Code notification hooks â€” sends alerts to Telegram/Slack on Notification, Stop, and SubagentStop events",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "zsh -c 'source ~/.zshrc 2>/dev/null; export PATH=\"/opt/homebrew/bin:/usr/local/bin:$PATH\"; node \"$CLAUDE_PLUGIN_ROOT/index.js\"'",
            "timeout": 7200
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "zsh -c 'source ~/.zshrc 2>/dev/null; export PATH=\"/opt/homebrew/bin:/usr/local/bin:$PATH\"; node \"$CLAUDE_PLUGIN_ROOT/index.js\"'",
            "timeout": 7200
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "zsh -c 'source ~/.zshrc 2>/dev/null; export PATH=\"/opt/homebrew/bin:/usr/local/bin:$PATH\"; node \"$CLAUDE_PLUGIN_ROOT/index.js\"'",
            "timeout": 7200
          }
        ]
      }
    ]
  }
}
