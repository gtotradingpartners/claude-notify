{
  "description": "Claude Code notification hooks â€” sends alerts to Telegram/Slack on Notification, Stop, and SubagentStop events",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.zshrc 2>/dev/null; source ~/.bashrc 2>/dev/null; node \"${CLAUDE_PLUGIN_ROOT}/index.js\"",
            "timeout": 300
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.zshrc 2>/dev/null; source ~/.bashrc 2>/dev/null; node \"${CLAUDE_PLUGIN_ROOT}/index.js\"",
            "timeout": 300
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.zshrc 2>/dev/null; source ~/.bashrc 2>/dev/null; node \"${CLAUDE_PLUGIN_ROOT}/index.js\"",
            "timeout": 300
          }
        ]
      }
    ]
  }
}
